<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} %-5p [%thread] [%class.%method:%L] (%file:%line\) - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="com.oxygenxml.webapp" level="debug" additivity="false">
    <appender-ref ref="CONSOLE" />
  </logger>

  <root level="debug">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>